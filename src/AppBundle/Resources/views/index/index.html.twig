{% extends 'base.html.twig' %}

{% block body %}
    <div style="margin: 30px;" class="">
        {{ render(controller(
        'AppBundle:Index:search'
        )) }}
    </div>
    <div style="margin: 30px;" class="">
        <p><a href="{{ path('add_word') }}">Add New Word</a></p>
    </div>
    {% if words is defined %}

        {% for word in words %}
            <article class="word">

                <header>
                    <h3>word - {{ word.word }}</a></h3>
                </header>
                <div class="">
                    {#<p>description - {{ word.description }}</p>#}
                    <p>language - {{ word.language }}</p>
                    <p> {% for tran in word.myTranslation %}
                            translation - {{ tran.word }}
                        {% endfor %}</p>
                </div>
                <div class="date">
                    <time datetime="{{ word.createdat|date('c') }}">Created at {{ word.createdat|date('l, F j, Y') }}</time>
                </div>
                <div class="">
                    <p>----------------------------------------</p>
                </div>
            </article>
        {% else %}
            <p>There are no words entries yet</p>
        {% endfor %}

        {% endif %}

{% endblock %}